{
	"compilerOptions": {
		"alwaysStrict": true,
		"declaration": true,
		"extendedDiagnostics": true,
		"esModuleInterop": true,
		"forceConsistentCasingInFileNames": true,
		"importsNotUsedAsValues": "error",
		"module": "CommonJS",
		"moduleResolution": "Node",
		"newLine": "LF",
		"noEmitOnError": true,
		"noUncheckedIndexedAccess": true,
		"noUnusedLocals": true,
		"noUnusedParameters": true,
		"outDir": "./dist/require",
		"preserveConstEnums": true,
		"strict": true,
		"target": "ES2019",
		"useUnknownInCatchVariables": true
	},
	"include": [
		"src/*.ts",
		"src/**/*.ts",
		"tests/**/*.ts",
		"tests/mix.test.js",
		"tests/index.js",
		"tests/formattingEnabled.test.js",
		"tests/format.test.js",
		"tests/ansi.test.js"
	]
}
